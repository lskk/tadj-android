<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="batch9.crayonpedia.tadj.LakukanBimbingan"
        tools:showIn="@layout/activity_lakukan_bimbingan">

        <EditText
            android:id="@+id/etTanggal"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="Pilih Tanggal dengan menekan tombol di bawah"
            android:textSize="15dp"/>
        <Button
            android:id="@+id/btDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal"
            android:background="@color/flat_green"
            android:textColor="@color/md_white_1000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="left"
            android:onClick="showTimePickerDialog"/>
        <EditText
            android:id="@+id/etJudul"
            android:hint="Judul Bimbingan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/tvPembimbing"
            android:text="Pembimbing"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/spPembimbing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"></Spinner>
        <EditText
            android:id="@+id/etPermasalahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Permasalahan"
            android:textSize="15dp"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="10"
            android:gravity="top|left"
            android:scrollbars="vertical"/>
        <EditText
            android:id="@+id/etPenyelesaian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Penyelesaian"
            android:textSize="15dp"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="10"
            android:gravity="top|left"
            android:scrollbars="vertical"/>
        <Button
            android:id="@+id/btUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Berkas"
            android:background="@color/flat_green"
            android:textColor="@color/md_white_1000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="left"/>
        <Button
            android:id="@+id/btKirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="Kirim"
            android:background="@color/colorAccent"
            android:textColor="@color/md_white_1000"
            android:layout_gravity="left"/>
    </LinearLayout>
</ScrollView>